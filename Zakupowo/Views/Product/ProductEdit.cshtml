@model Zakupowo.Models.Product

<h2>Edytuj produkt</h2>

@using (Html.BeginForm("ProductEdit", "Product", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        @Html.HiddenFor(model => model.ProductId, new { id = "ProductId" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.Name, "Nazwa produktu")
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CategoryId, "Kategoria")
        @Html.DropDownList("CategoryId", ViewBag.Categories as SelectList, "Wybierz kategorię", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.CategoryId)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Price, "Cena")
        @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Price)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.VatRateId, "Stawka VAT")
        @Html.DropDownList("VatRateId", ViewBag.VatRates as SelectList, "Wybierz stawkę VAT", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.VatRateId)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description, "Opis")
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 5 })
        @Html.ValidationMessageFor(model => model.Description)
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.Stock, "Stan magazynowy")
        @Html.TextBoxFor(model => model.Stock, new { @class = "form-control", rows = 5 })
        @Html.ValidationMessageFor(model => model.Stock)
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.IsHidden, "Ukryty")
        @Html.CheckBoxFor(model => model.IsHidden, new {rows = 5 })
        @Html.ValidationMessageFor(model => model.IsHidden)
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.Image, "Obraz")
        @Html.TextBoxFor(model => model.Image, new { @class = "form-control", rows = 5 })
        @Html.ValidationMessageFor(model => model.Image)
    </div>
    
    <div class="form-group">
        @Html.HiddenFor(model => model.CategoryId, new { id = "CategoryId" })
    </div>
    
    <div class="form-group">
        @Html.HiddenFor(model => model.VatRateId, new { id = "CategoryId" })
    </div>
    
    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
    <a href="@Url.Action("AdminProductList", "Product")" class="btn btn-secondary">Anuluj</a>
}