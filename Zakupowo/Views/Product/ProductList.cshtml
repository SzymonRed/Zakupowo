@{
    ViewBag.Title = "Produkty - Zakupowo";
}

<h2>Lista produktów</h2>

@if (TempData["CartSuccess"] != null)
{
    <div class="alert alert-success">
        @TempData["CartSuccess"]
    </div>
}

<div class="product-list">
    @foreach (var product in Model)
    {
        <div class="product-item">
            <h3>@product.Name</h3>
            <p>@product.Description</p>
            <p>@product.Price.ToString("C")</p>

            <!-- Formularz dodawania produktu do koszyka -->
            <form action="@Url.Action("AddToCart", "Cart")" method="post">
                @Html.AntiForgeryToken() <!-- Dodajemy token zabezpieczający przed fałszerstwami -->
                <input type="hidden" name="productId" value="@product.ProductId" />
                <input type="number" name="quantity" value="1" min="1" />
                <button type="submit" class="btn btn-primary">Dodaj do koszyka</button>
            </form>
        </div>
    }
</div>