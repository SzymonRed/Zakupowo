@model Zakupowo.Models.Category

@{
    ViewBag.Title = "Dodaj Kategorię";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Dodaj Kategorię</h2>

    @if (TempData["CategorySuccess"] != null)
    {
        <div class="alert alert-success">
            @TempData["CategorySuccess"]
        </div>
    }

    @using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Wprowadź nazwę kategorii" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ParentCategoryId, "Kategoria nadrzędna", new { @class = "control-label" })
            @Html.DropDownListFor(m => m.ParentCategoryId, ViewBag.Categories as SelectList, "- Brak -", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ParentCategoryId, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-primary">Dodaj kategorię</button>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}