@model IEnumerable<Zakupowo.Models.Category>
@{
    ViewBag.Title = "Lista kategorii";
}

<h2>Lista kategorii</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Nazwa</th>
        <th>Widoczna</th>
        <th>Kategoria nadrzędna</th>
        <th>Akcje</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Name</td>
            <td>@(category.IsHidden ? "Nie" : "Tak")</td>
            <td>@(category.ParentCategory?.Name)</td>
            <td>
                @Html.ActionLink("Edytuj", "EditCategory", new { id = category.CategoryId }, new { @class = "btn btn-warning btn-sm" }) 
                @Html.ActionLink("Usuń", "DeleteCategory", new { id = category.CategoryId }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }
    </tbody>
</table>
<p>
    @Html.ActionLink("Dodaj nową kategorię", "AddCategory", null, new { @class = "btn btn-primary" })
</p>