@model Zakupowo.Models.Cart

@{
    ViewBag.Title = "Koszyk - Zakupowo";
}

<h2>Twój Koszyk</h2>

@if (Model != null && Model.CartItems.Any())
{
    <table>
        <thead>
            <tr>
                <th>Produkt</th>
                <th>Ilość</th>
                <th>Cena</th>
                <th>Razem</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Product.Price.ToString("C")</td>
                    <td>@(item.Quantity * item.Product.Price).ToString("C")</td>
                    <td>
                        <a href="@Url.Action("UpdateQuantity", "Cart", new { cartItemId = item.CartItemId, quantity = item.Quantity + 1 })">+1</a>
                        <a href="@Url.Action("UpdateQuantity", "Cart", new { cartItemId = item.CartItemId, quantity = item.Quantity - 1 })">-1</a>
                        <a href="@Url.Action("RemoveFromCart", "Cart", new { cartItemId = item.CartItemId })">Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <h3>Podsumowanie</h3>
        <p>Łączna wartość koszyka: @Model.CartItems.Sum(ci => ci.Quantity * ci.Product.Price).ToString("C")</p>
        <a href="@Url.Action("Checkout", "Cart")" class="btn btn-primary">Przejdź do kasy</a>
    </div>
}
else
{
    <p>Twój koszyk jest pusty.</p>
}