@{
    ViewBag.Title = "Zakupowo - Sklep Internetowy";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
}

<div class="header">
    <h1>Zakupowo</h1>
    <div class="user-menu">
        @if (Session["UserId"] != null)
        {
            <!-- Przycisk Wyloguj się, jeśli użytkownik jest zalogowany -->
            <a href="@Url.Action("Logout", "Account")" class="logout-button">Wyloguj się</a>

            <!-- Przycisk Dodaj Produkt dla administratora -->
            if (Session["IsAdmin"] != null && (bool)Session["IsAdmin"])
            {
                <a href="@Url.Action("AddCategory", "Category")" class="btn btn-success">Dodaj Kategorię</a>
                <a href="@Url.Action("AddProduct", "Product")" class="btn btn-primary">Dodaj Produkt</a>
            }
            <!-- Przycisk Koszyk -->
            <a href="@Url.Action("Cart", "Cart")" class="cart-button">
                <i class="fas fa-shopping-cart"></i> <!-- Ikona koszyka (z FontAwesome) -->
                Koszyk
                @if (Session["CartItemCount"] != null)
                {
                    <span class="cart-count">@Session["CartItemCount"]</span>
                }
                else
                {
                    <span class="cart-count">0</span>
                }
            </a>
        }
        else
        {
            <!-- Przycisk Zaloguj się, jeśli użytkownik nie jest zalogowany -->
            <a href="@Url.Action("Login", "Account")" class="login-button">Zaloguj się</a>
        }
    </div>
</div>

<div class="content">
    <h2>Witamy w Zakupowo!</h2>
    <p>Najlepsze miejsce na zakupy online.</p>

    <!-- Przycisk do wyświetlania wszystkich produktów -->
    <a href="@Url.Action("ProductList", "Product")" class="btn btn-secondary">Zobacz wszystkie produkty</a>

    <!-- Komunikaty o sukcesie/błędzie -->
    @if (TempData["LoginSuccess"] != null)
    {
        <div class="success-message">
            @TempData["LoginSuccess"]
        </div>
    }
    @if (TempData["LoginError"] != null)
    {
        <div class="error-message">
            @TempData["LoginError"]
        </div>
    }
    @if (TempData["RegisterSuccess"] != null)
    {
        <div class="success-message">
            @TempData["RegisterSuccess"]
        </div>
    }
    @if (TempData["ProductAdded"] != null)
    {
        <div class="success-message">
            @TempData["ProductAdded"]
        </div>
    }
</div>

<div class="footer">
    <p>&copy; 2024 Zakupowo. Wszystkie prawa zastrzeżone.</p>
</div>