@model Zakupowo.Models.User

@{
    ViewBag.Title = "Usuń";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Czy na pewno chcesz usunąć użytkownika?</h2>

<div class = "user-details-container">
    <h4>@Model.Username</h4>
    <dl class="row">
        <dt class="col-sm-2">Nazwa użytkownika</dt>
        <dd class="col-sm-10">@Model.Username</dd>

        <dt class="col-sm-2">Administrator</dt>
        <dd class="col-sm-10">@Model.IsAdmin</dd>
    </dl>
</div>

@using (Html.BeginForm("Delete", "User", FormMethod.Post))
{
@Html.AntiForgeryToken()
@Html.HiddenFor(model => model.UserId)
<button type="submit" class="btn btn-danger">Usuń</button>
@Html.ActionLink("Anuluj", "UserList", null, new { @class = "btn btn-secondary" })
}

